<h3>Address</h3>
<%= f.fields_for :address do |u| %>
  <div class="form-group">
    <%= u.label :address1 %>
    <%= u.text_field :address1, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= u.label :address2 %>
    <%= u.text_field :address2, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= u.label :city %>
    <%= u.text_field :city, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= u.label :postal_code %>
    <%= u.text_field :postal_code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= u.label :province %>
    <%= u.text_field :province, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= u.label :country %>
    <%= u.text_field :country, class: "form-control" %>
  </div>
<% end %>
