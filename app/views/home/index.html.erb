<% unless user_signed_in? %>
  <div class="alert alert-info alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    We detected your location <% if @current_location.city.present? %>to be <%= @current_location.city %><% else %>automatically<% end %>, please make sure this is your location.
  </div>
<% end %>

<input id="pac-input" class="controls" type="text" placeholder="Search Box">
<div id="map"
     data-latitude="<%= @current_location.latitude %>"
     data-longitude="<%= @current_location.longitude %>"
     style='width: 100%; height: 500px;'></div>
