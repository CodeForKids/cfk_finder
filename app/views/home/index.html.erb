<% unless user_signed_in? %>
  <div class="alert alert-info alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    We detected this location to be <%= @current_location.city %>, please make sure its pointed at the correct location.
  </div>
<% end %>

<div id="map"
     data-latitude="<%= @current_location.latitude %>"
     data-longitude="<%= @current_location.longitude %>"
     data-markers="<%= h @hash.to_json %>"
     style='width: 100%; height: 500px;'></div>
