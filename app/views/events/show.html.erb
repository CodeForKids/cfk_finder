<div class="page-header">
  <%= link_to :back, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to [:edit, @owner, @event], class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show event</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @event.name %></dd>
  <dt>Description:</dt>
  <dd><%= @event.description %></dd>
  <dt>Spots available:</dt>
  <dd><%= @event.spots_available %></dd>
  <dt>Type:</dt>
  <dd><%= @event.event_type %></dd>
  <dt>Materials needed:</dt>
  <dd><%= @event.materials_needed %></dd>
  <dt>Price:</dt>
  <dd><%= humanized_money_with_symbol @event.price %></dd>
  <dt>Tax rate:</dt>
  <dd><%= number_to_percent @event.tax_rate %></dd>

  <%= render @event.address %>
</dl>
