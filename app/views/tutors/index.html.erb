<div class="page-header">
  <%= link_to new_tutor_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Tutor
  <% end %>
  <h1>Listing tutors</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Date of birth</th>
            <th>Max students</th>
      
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tutors) do |tutor| %>
              <td><%= tutor.first_name %></td>
              <td><%= tutor.last_name %></td>
              <td><%= tutor.date_of_birth %></td>
              <td><%= tutor.max_students %></td>
      

  

        <td><%= link_to 'Show', tutor %></td>
        <td><%= link_to 'Edit', edit_tutor_path(tutor) %></td>
        <td><%= link_to 'Destroy', tutor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
