<div class="page-header">
  <%= link_to tutors_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>

  <%= link_to edit_tutor_path(@tutor), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>

  <%= link_to [@tutor, :events], class: 'btn btn-primary' do %>
    Events
  <% end %>

  <h1>Show tutor</h1>
</div>

<dl class="dl-horizontal">
  <dt>First name:</dt>
  <dd><%= @tutor.first_name %></dd>
  <dt>Last name:</dt>
  <dd><%= @tutor.last_name %></dd>
  <dt>Date of birth:</dt>
  <dd><%= @tutor.date_of_birth %></dd>
  <dt>Max students:</dt>
  <dd><%= @tutor.max_students %></dd>
</dl>

<%= render @tutor.address %>
<%= render "activities/activities", activities: @activities %>
