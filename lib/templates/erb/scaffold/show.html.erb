<div class="page-header">
  <%%= link_to :back, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <%% end %>
  <%%= link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <%% end %>
  <h1>Show <%= singular_table_name %></h1>
</div>
<% @columns = singular_table_name.humanize.constantize.columns rescue nil %>
<dl class="dl-horizontal">
  <%- attributes.each do |attribute| -%>
    <dt><%= attribute.human_name %>:</dt>
    <dd><%%= @<%= singular_table_name %>.<%= attribute.name %> %></dd>
  <%- end -%>

<% if @columns %>
<% @columns.each do |column| -%>
  <% unless ["id", "updated_at", "created_at"].include?(column.name) %>
    <dt><%= column.name.humanize %>:</dt>
    <dd><%%= @<%= singular_table_name %>.<%= column.name %> %></dd>
  <% end %>
<% end -%>
<% end %>

</dl>
